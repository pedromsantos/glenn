{
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!lib/**/*",
    "!tools/**/*",
    "!src/__test__/**/*",
    "!src/index.ts",
    "!babel.config.js"
  ],
  "coverageReporters": ["json", "lcov", "text", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 98,
      "lines": 98,
      "statements": 98
    }
  },
  "preset": "ts-jest",
  "transform": {
    "^.+\\.ts?$": "ts-jest",
    "^.+\\.js$": "babel-jest"
  }
}
