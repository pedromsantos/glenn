{
  "name": "glenn",
  "version": "0.0.2",
  "description": "Module for working with music theory concepts",
  "author": "Pedro Moreira Santos",
  "homepage": "https://github.com/pedromsantos/glenn",
  "keywords": [
    "Music",
    "Theory",
    "Music Theory",
    "Guitar",
    "Tab",
    "Tablature"
  ],
  "license": "MIT",
  "main": "index.js",
  "module": "./dist/index.mjs",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "License.md",
    "README.md",
    "package.json"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "default": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "node": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pedromsantos/glenn.git"
  },
  "bugs": {
    "url": "https://github.com/pedromsantos/glenn/issues"
  },
  "scripts": {
    "check_exports": "check-export-map",
    "watch": "jest --watch",
    "test": "jest --no-cache --runInBand",
    "precommit": "turbo lint types test:ci check_exports",
    "ci": "turbo lint types test:ci",
    "test:ci": "jest --coverage --no-cache --runInBand",
    "mutants": "stryker run",
    "build": "tsup src/index.ts",
    "lint": "eslint . --color --ext .ts --ignore-pattern 'node_modules/'",
    "lint:fix": "eslint . --ext .ts --ignore-pattern 'node_modules/' --fix",
    "types": "type-coverage -at-least 99",
    "types-report": "typescript-coverage-report --threshold 99",
    "prepare": "husky install",
    "release": "turbo run publish",
    "publish": "changeset publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@stryker-mutator/core": "^6.3.1",
    "@stryker-mutator/jest-runner": "^6.3.1",
    "@stryker-mutator/typescript-checker": "^6.3.1",
    "@types/jest": "^28.1.7",
    "check-export-map": "^1.3.0",
    "eslint": "^8.33.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "fast-check": "^3.6.2",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "prettier": "^2.8.3",
    "standard-version": "^9.5.0",
    "ts-coverage": "^0.1.5",
    "ts-jest": "^28.0.8",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "turbo": "^1.8.1",
    "type-coverage": "^2.24.1",
    "typescript": "^4.9.5",
    "typescript-coverage-report": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
