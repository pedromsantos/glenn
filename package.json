{
  "name": "glenn",
  "version": "1.0.0",
  "description": "Module for working with music theory",
  "main": "index.ts",
  "author": "Pedro Moreira Santos",
  "license": "MIT",
  "scripts": {
    "watch": "jest --watch",
    "test": "jest --watchAll=false",
    "precommit": "npm-run-all -p lint types test",
    "test:ci": "jest test --watchAll=false --coverage=true",
    "mutants": "stryker run",
    "lint": "eslint --color --ext .js,.json,.ts, src",
    "lint:fix": "eslint --fix --ext .js,.json,.ts, src",
    "types": "type-coverage -at-least 99",
    "types-report": "typescript-coverage-report --threshold 99",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^4.7.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "eslint": "^8.16.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-coverage": "^0.1.5",
    "ts-jest": "^28.0.3",
    "fast-check": "^3.0.0",
    "ts-node-dev": "^2.0.0",
    "type-coverage": "^2.21.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.36",
    "typescript-coverage-report": "^0.6.4",
    "@fluffy-spoon/substitute": "^1.208.0",
    "@stryker-mutator/core": "^6.0.2",
    "@stryker-mutator/jest-runner": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.13.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "!src/__test__/utils.ts",
      "!src/index.ts"
    ],
    "coverageReporters": [
      [
        "text"
      ]
    ],
    "coverageThreshold": {
      "global": {
        "branches": 79,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "eslintConfig": {
    "env": {
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "prettier",
      "sonarjs",
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ]
  }
}
