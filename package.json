{
  "name": "glenn",
  "version": "1.0.0",
  "description": "Module for working with music theory",
  "author": "Pedro Moreira Santos",
  "homepage": "https://github.com/pedromsantos/glenn",
  "keywords": [
    "Music",
    "Theory",
    "Music Theory",
    "Guitar",
    "Tab",
    "Tablature"
  ],
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "watch": "jest --watch",
    "clean": "rm -r ./lib",
    "test": "jest --watchAll=false",
    "precommit": "npm-run-all -p clean lint types test build",
    "test:ci": "jest test --watchAll=false --coverage=true",
    "mutants": "stryker run",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "lint": "eslint . --color --ext .ts --ignore-pattern 'node_modules/'",
    "lint:fix": "eslint . --ext .ts --ignore-pattern 'node_modules/' --fix",
    "types": "type-coverage -at-least 99",
    "types-report": "typescript-coverage-report --threshold 99",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@stryker-mutator/core": "^6.1.2",
    "@stryker-mutator/jest-runner": "^6.1.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.6",
    "fast-check": "^3.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-coverage": "^0.1.5",
    "ts-jest": "^28.0.5",
    "type-coverage": "^2.21.2",
    "typescript": "^4.7.4",
    "typescript-coverage-report": "^0.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!lib/**/*.*",
      "!src/__test__/utils.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "prettier",
      "sonarjs",
      "jest",
      "@typescript-eslint",
      "simple-import-sort",
      "import"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "no-console": 1,
      "no-unused-vars": 0
    }
  }
}
